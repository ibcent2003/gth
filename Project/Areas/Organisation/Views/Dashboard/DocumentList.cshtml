@model Project.Areas.Organisation.Models.OrganisationDashboardModel

@{
    ViewBag.Title = "Documents Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.IsGreetings = "true";}

@section Crumbs{
    <div class="crumbs">

        <ul class="breadcrumb" id="breadcrumbs">
            <li> <i class="icon-home"></i> <a href="@Url.Action("Index", "Home", new { area="Admin"})">Dashboard</a> </li>
            <li class="current"> <a title="" href="javascript: return void(0)">Documents Management</a> </li>
        </ul>
    </div>
}

<div class="row">
    <div class="col-md-12">
        <div class="widget-header">
            @Html.ActionLink("Create New", "NewDocument", null, new { @class = "btn btn-success" }) 
        </div>
        <br />
        <div class="widget-content">



            <table class="table table-striped table-bordered table-hover table-checkable datatable dataTable">
                <thead>
                    <tr style="font-size: 12px;">
                        <th>S/N</th>
                        <th>Name</th>
                        <th>Document Category</th>
                        <th>Download</th>
                        <th>
                            Published?
                        </th>
                        <th>Modified By</th>
                        <th>Modified Date</th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.documentlist.Count != 0)
                    {
                        int i = 0;
                        foreach (var item in Model.documentlist)
                        {
                            ++i;
                            <tr style="font-size: 12px;">
                                <td>
                                    @i
                                </td>
                                <td>@Html.ActionLink(item.Name, "EditDocument", new { Id = item.Id }, null)</td>
                                <td>@item.DocumentCategory.Name</td>
                                <td><a target="_blank" href="~/Content/Frontend/light/img/sections/Documents/@item.Path"><i class="icon-download"></i></a></td>
                                <td>
                                    @if (item.IsValid == true)
                                    {
                                        <span class="label label-success"> <strong>Yes</strong></span>
                                    }
                                    else
                                    {
                                        <span class="label label-danger"> <strong>No</strong></span>
                                    }
                                </td>
                                <td>@item.ModifiedBy</td>
                                <td>@item.ModifiedDate.ToShortDateString()</td>
                                <td>
                                     <a href="@Url.Action("RemoveDocument", "Dashboard", new { DocId = item.Id, @area="Organisation" })" class="btn btn-xs btn-success" onclick ="return DeleteConfirm()">Remove</a>
                                  
                                </td>


                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8">No Records Found!...</td>
                        </tr>
                    }
                </tbody>
            </table>



        </div>
    </div>
</div>

@section Scripts{
    @Scripts.Render("~/Content/Backend/plugins/datatables/jquery.dataTables.min.js")
    @Scripts.Render("~/Content/Backend/plugins/datatables/tabletools/TableTools.min.js")
    @Scripts.Render("~/Content/Backend/plugins/datatables/colvis/ColVis.min.js")
    @Scripts.Render("~/Content/Backend/plugins/datatables/DT_bootstrap.js")
    <script>
    "use strict";

    function DeleteConfirm() {
        if (confirm("Are you sure want to remove this document?"))
            return true;
        else
            return false;
    }
    </script>
}


