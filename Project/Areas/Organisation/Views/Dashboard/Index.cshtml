@model Project.Areas.Organisation.Models.OrganisationDashboardModel
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.IsGreetings = "true";
}
@section Crumbs{
    <div class="crumbs">

        <ul class="breadcrumb" id="breadcrumbs">
            <li> <i class="icon-home"></i> <a href="@Url.Action("Index", "Dashboard", new { area="Admin"})">Dashboard</a> </li>

        </ul>
    </div>
}

<div class="row row-bg">
    <div class="col-sm-6 col-md-3 hidden-xs">
        <div class="statbox widget box box-shadow">
            <div class="widget-content">
                <div class="visual cyan"><i class="icon-file-text"></i></div>
                <div class="title">Total News Uploaded</div>
                <div class="value">@Model.TotalNews</div>
                <a class="more" href="@Url.Action("NewsList", "Dashboard", new { area="Organisation"})">View More <i class="pull-right icon-angle-right"></i></a>

            </div>
        </div>
    </div>

    <div class="col-sm-6 col-md-3 hidden-xs">
        <div class="statbox widget box box-shadow">
            <div class="widget-content">
                <div class="visual green"><i class="icon-repeat"></i></div>
                <div class="title">Total News Approved</div>
                <div class="value">@Model.TotalApprovedNews</div>
                <a class="more" href="@Url.Action("NewsList", "Dashboard", new { area="Organisation"})">View More <i class="pull-right icon-angle-right"></i></a>

            </div>
        </div>
    </div>

    <div class="col-sm-6 col-md-3 hidden-xs">
        <div class="statbox widget box box-shadow">
            <div class="widget-content">
                <div class="visual red"><i class="icon-building"></i></div>
                <div class="title">
                    Total News Deleted
                </div>
                <div class="value">@Model.TotalDeletedNews</div>
                <a class="more" href="@Url.Action("NewsList", "Dashboard", new { area="Organisation"})">View More <i class="pull-right icon-angle-right"></i></a>

            </div>
        </div>
    </div>

    <div class="col-sm-6 col-md-3 hidden-xs">
        <div class="statbox widget box box-shadow">
            <div class="widget-content">
                <div class="visual yellow"><i class="icon-building"></i></div>
                <div class="title">Total Uploaded Docs</div>
                <div class="value">@Model.TotalDocuments</div>
                <a class="more" href="@Url.Action("DocumentList", "Dashboard", new { area="Organisation"})">View More <i class="pull-right icon-angle-right"></i></a>

            </div>
        </div>
    </div>
</div>
