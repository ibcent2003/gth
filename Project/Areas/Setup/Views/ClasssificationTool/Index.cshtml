@model Project.Areas.Setup.Models.ClasssificationToolViewModel

@{
    ViewBag.Title = "Classification Tool";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.IsGreetings = "true";}

@section Crumbs{
    <div class="crumbs">

        <ul class="breadcrumb" id="breadcrumbs">
            <li> <i class="icon-home"></i> <a href="@Url.Action("Index", "Home", new { area="Admin"})">Dashboard</a> </li>
            <li class="current"> <a title="" href="javascript: return void(0)">Classification Tool</a> </li>
        </ul>
    </div>
}

<div class="row">
    <div class="col-md-12">
        <div class="widget box">
            <div class="widget-header">
                <h4>
                    <i class="icon-reorder"></i>
                    Classification Tool
                </h4>
            </div>
            <div class="widget-content">
                @using (Html.BeginForm("Index", "ClasssificationTool", FormMethod.Post, new { @enctype = "multipart/form-data", @class = "form-horizontal row-border" }))
                {
                    @Html.AntiForgeryToken()

                  

                    <div class="form-group">
                        @Html.LabelFor(m => m.classificationForm.Description, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextAreaFor(m => m.classificationForm.Description, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.classificationForm.Description)
                        </div>
                    </div>

                    <div class="form-actions">
                        @Html.ActionLink("<< Back", "Index", null, new { @class = "btn btn-success" })
                        <input type="submit" class="btn btn-warning pull-right" value="Search" />
                    </div>
                }
            </div>
        </div>
    </div>
</div>




<div class="row">
    <div class="col-md-12">       
        <div class="widget-content">


          @if (Model.HasSearch == true)
          {
            <table class="table table-striped table-bordered table-hover table-checkable datatable dataTable">
                <thead>
                    <tr style="font-size: 12px;">
                        <th>S/N</th>
                        <th>AssessedHSCode</th>
                        <th>Description</th>
                        <th>JSon</th>
                          

                    </tr>
                </thead>
                <tbody>
                    @if (Model.ClassificationList.Count != 0)
                    {
                        int i = 0;
                        foreach (var item in Model.ClassificationList)
                        {
                            ++i;
                            <tr style="font-size: 12px;">
                                <td>
                                    @i
                                </td>
                                <td>@item.Code</td>
                                <td>@item.Description</td>

                               <td>
                                   <a data-toggle="modal" title="Bond Sum" href="#@item.Id"><i class="icon-eye-open"></i></a>

                                   <div class="row">
                                       <div class="modal fade" id="@item.Id">
                                           <div class="modal-dialog">
                                               <div class="modal-content">
                                                   <div class="modal-header">
                                                       <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                                       <h4 class="modal-title">JSon Information</h4>

                                                   </div>
                                                   <div class="modal-body">

                                                     @Model.JSonFormat

                                                   </div>
                                                   <div class="modal-footer">
                                                       <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                                                   </div>
                                               </div>
                                           </div>
                                       </div>
                                   </div> 
                               </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8">No Records Found!...</td>
                        </tr>
                    }
                </tbody>
            </table>


          }


        </div>
    </div>
</div>



@section Scripts{
    @Scripts.Render("~/Content/Backend/plugins/datatables/jquery.dataTables.min.js")
    @Scripts.Render("~/Content/Backend/plugins/datatables/tabletools/TableTools.min.js")
    @Scripts.Render("~/Content/Backend/plugins/datatables/colvis/ColVis.min.js")
    @Scripts.Render("~/Content/Backend/plugins/datatables/DT_bootstrap.js")
    <script>
    "use strict";

    </script>
}

