@model Project.Areas.Setup.Models.TestimonialViewModel

@{
    ViewBag.Title = "Testimonials Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.IsGreetings = "true";}

@section Crumbs{
    <div class="crumbs">

        <ul class="breadcrumb" id="breadcrumbs">
            <li> <i class="icon-home"></i> <a href="@Url.Action("Index", "Home", new { area="Admin"})">Dashboard</a> </li>
            <li class="current"> <a title="" href="javascript: return void(0)">Testimonials Management</a> </li>
        </ul>
    </div>
}

<div class="row">
    <div class="col-md-12">
        <div class="widget-header">
            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
        </div>
        <div class="widget-content">



            <table class="table table-striped table-bordered table-hover table-checkable datatable dataTable">
                <thead>
                    <tr style="font-size: 12px;">
                        <th>S/N</th>
                        <th>Name</th>  
                        <th>Position</th>                      
                        <th>Published?</th>
                        <th>Deleted?</th>
                        <th>Modified By</th>
                        <th>Modified Date</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Rows.Count != 0)
                    {
                        int i = 0;
                        foreach (var item in Model.Rows)
                        {
                            ++i;
                            <tr style="font-size: 12px;">
                                <td>
                                    @i
                                </td>
                                <td>
                                    @Html.ActionLink(item.Name, "Edit", new { Id = item.Id }, null)
                                </td>
                                <td>@item.Company</td>
                               

                                <td>
                                    @if (item.IsPulished == true)
                                    {
                                        <span class="label label-success"> <strong>Yes</strong></span>
                                    }
                                    else
                                    {
                                        <span class="label label-danger"> <strong>No</strong></span>
                                    }
                                </td>
                                <td>
                                    @if (item.HasDeleted == true)
                                    {
                                        <span class="label label-success"> <strong>Yes</strong></span>
                                    }
                                    else
                                    {
                                        <span class="label label-danger"> <strong>No</strong></span>
                                    }
                                </td>
                                <td>
                                    @item.ModifiedBy
                                </td>
                                <td>
                                @item.ModifiedDate.ToShortDateString()
                                </td>
                                <td>
                                    <a data-toggle="modal" title="Bond Sum" href="#@item.Id"><i class="icon-eye-open"></i></a>

                                    <div class="row">
                                        <div class="modal fade" id="@item.Id">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                                        <h4 class="modal-title">Testimonial Information</h4>

                                                    </div>
                                                    <div class="modal-body">
                                                        @Html.Raw(item.Message)
                                                   

                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div> 
                                </td>
                               
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8">No Records Found!...</td>
                        </tr>
                    }
                </tbody>
            </table>



        </div>
    </div>
</div>

@section Scripts{
    @Scripts.Render("~/Content/Backend/plugins/datatables/jquery.dataTables.min.js")
    @Scripts.Render("~/Content/Backend/plugins/datatables/tabletools/TableTools.min.js")
    @Scripts.Render("~/Content/Backend/plugins/datatables/colvis/ColVis.min.js")
    @Scripts.Render("~/Content/Backend/plugins/datatables/DT_bootstrap.js")
    <script>
    "use strict";

    </script>
}

