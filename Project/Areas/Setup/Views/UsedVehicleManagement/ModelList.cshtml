@model Project.Areas.Setup.Models.UsedVehicleManagementViewModel

@{
    ViewBag.Title = "Model Management for " + Model.VehicleReference.Name;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.IsGreetings = "true";}

@section Crumbs{
    <div class="crumbs">

        <ul class="breadcrumb" id="breadcrumbs">
            <li> <i class="icon-home"></i> <a href="@Url.Action("Index", "Home", new { area="Admin"})">Dashboard</a> </li>
            <li class="current"> <a title="" href="javascript: return void(0)">Model Management</a> </li>
        </ul>
    </div>
}

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr style="font-size: 12px;">
            <th>S/N</th>
            <th>Make</th>
            <th>No of Model</th>
            <th>Modified By</th>
            <th>Modified Date</th>          
        </tr>
    </thead>
    <tbody>
        @if (Model.VehicleReference != null)
        {
        
                <tr style="font-size: 12px;">
                    <td>
                      <p>1</p>
                    </td>
                    <td>@Model.VehicleReference.Name</td>
                    <td>
                        <span class="label label-danger"> <strong>@Model.VehicleReference.VehicleModelReference.Count()</strong></span>

                    </td>
                    <td>@Model.VehicleReference.ModifiedBy</td>
                    <td>@Model.VehicleReference.ModifiedDate.ToShortDateString()</td>
                   
                </tr>
        
        }
        else
        {
            <tr>
                <td colspan="8">No Records Found!...</td>
            </tr>
        }
    </tbody>
</table>

<br />










<div class="row">
    <div class="col-md-12">
        <div class="widget-header">
            <a href="@Url.Action("NewModel", "UsedVehicleManagement", new { Id = Model.VehicleReference.Id,  @area="Setup" })" class="btn btn-success">Create New</a> @Html.ActionLink("<< Back", "Index", null, new { @class = "btn btn-inverse" })
        </div>
        <br />
        <div class="widget-content">



            <table class="table table-striped table-bordered table-hover table-checkable datatable dataTable">
                <thead>
                    <tr style="font-size: 12px;">
                        <th>S/N</th>
                        <th>Name</th>                      
                        <th>Modified By</th>
                        <th>Modified Date</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.VModelList.Count != 0)
                    {
                        int i = 0;
                        foreach (var item in Model.VModelList)
                        {
                            ++i;
                            <tr style="font-size: 12px;">
                                <td>
                                    @i
                                </td>
                                <td>@Html.ActionLink(item.ModelName, "EditModel", new { Id = item.Id, MakeId = item.MakeId }, null)</td>                                
                                <td>@item.ModifiedBy</td>
                                <td>@item.ModifiedDate</td>


                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8">No Records Found!...</td>
                        </tr>
                    }
                </tbody>
            </table>



        </div>
    </div>
</div>

@section Scripts{
    @Scripts.Render("~/Content/Backend/plugins/datatables/jquery.dataTables.min.js")
    @Scripts.Render("~/Content/Backend/plugins/datatables/tabletools/TableTools.min.js")
    @Scripts.Render("~/Content/Backend/plugins/datatables/colvis/ColVis.min.js")
    @Scripts.Render("~/Content/Backend/plugins/datatables/DT_bootstrap.js")
    <script>
    "use strict";

    </script>
}

