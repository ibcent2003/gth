@model Project.Models.EServicesViewModel
@{
    ViewBag.Title =Model.CategoryName +"Documents List";
    var db = new Project.DAL.PROEntities();
}

<style>
.tooltip {
  position: relative;
  display: inline-block;
  border-bottom: 1px dotted black;
}

.tooltip .tooltiptext {
  visibility: hidden;
  width: 120px;
  background-color: black;
  color: #fff;
  text-align: center;
  border-radius: 6px;
  padding: 5px 0;
  position: absolute;
  z-index: 1;
  bottom: 150%;
  left: 50%;
  margin-left: -60px;
}

.tooltip .tooltiptext::after {
  content: "";
  position: absolute;
  top: 100%;
  left: 50%;
  margin-left: -5px;
  border-width: 5px;
  border-style: solid;
  border-color: black transparent transparent transparent;
}

.tooltip:hover .tooltiptext {
  visibility: visible;
}
</style>

<div class="page-header page-title-left mini">
    <div class="image-bg content-in" data-background="@Url.Content("~/Content/Frontend/light/img/gthbg.jpg")" data-stellar-background-ratio="0.5" style="background-image: @Url.Content("~/Content/Frontend/light/img/sections/slider/backmenu.jpg"); background-position: 50% 0%;"></div>
    <div class="container">
        <div class="col-md-12">
            <h1 class="title" style="color:white">@Model.CategoryName Documents</h1>
            <ul class="breadcrumb" style="color:white">
                <li style="color:white">
                    <a href="@Url.Action("Classic", "Home", new {area = "" })" style="color:white">Home</a>
                </li>             

                <li class="active" style="color:white">@Model.CategoryName Documents</li>
            </ul>
        </div>
    </div>
</div>

<section id="addition-info" class="page-section">
    <div class="container">
        <div class="row">
            <div class="col-sm-9 col-md-9">
                <div class="widget">
                    <div class="widget-title">
                        <h3 class="title"><i class="icon-mobile9"></i>@Model.CategoryName Documents</h3>
                    </div>
                </div>
                <div class="widget">
                  
                    <table class="table table-striped table-bordered table-hover table-checkable datatable dataTable" id="fees">
                        <thead>
                            <tr style="font-size: 12px;">
                                <th>S/N</th>
                                <th>Document Title</th>                               
                                <th>Date</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.DocumentInfoList.Count != 0)
                            {
                                int i = 0;
                                foreach (var item in Model.DocumentInfoList.OrderByDescending(x=>x.Id))
                                {
                                    ++i;
                                    <tr style="font-size: 12px;">
                                        <td>
                                            @i
                                        </td>
                                        <td>@item.Name</td>                                       
                                        <td>@item.ModifiedDate.ToShortDateString()</td>
                                        <td>
                                            <a target="_blank" href="~/Content/Frontend/light/img/sections/Documents/@item.Path">Download @*<i class="icon-download"></i>*@</a>  | 
                                            @if (item.ExtentalLink == null)
                                            {

                                            }
                                            else
                                            {
                                              <a href="@Url.Action("ReadOnline", "EServices", new {area = "", Id=item.Id })" target="_blank" >Read Online@*<i class="glyphicon glyphicon-eye-open"></i>*@</a>
                                            }
                                            </td>

                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="8">No Records Found!...</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col-sm-3 col-md-3">
                <div class="widget">
                    <div class="widget-title">
                        <h3 class="title"><i class="icon-document"></i> Other Documents</h3>
                    </div>

                    <div id="MainMenu2">
                        <div class="list-group panel">
                            @foreach (var item in Model.DocumentCategoryList)
                            {                               
                                <a href="@Url.Action("DocumentsList", "EServices", new {Id=item.Id, area = "" })" class="list-group-item">@item.Name</a>
                            }

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>


@section Styles {
    @Styles.Render("~/Content/Backend/datatables/DataTables-1.10.16/css/jquery.dataTables.css")
    @Styles.Render("~/Content/Backend/datatables/DataTables-1.10.16/css/dataTables.bootstrap.css")
}


@section Scripts{
    @Scripts.Render("~/Content/Backend/datatables/DataTables-1.10.16/js/jquery.dataTables.js")
    @Scripts.Render("~/Content/Backend/datatables/DataTables-1.10.16/js/dataTables.bootstrap.js")
    <script src="~/Scripts/jquery-1.12.4.min.js"></script>

    <script>
        var oTable1 =
            $('#fees')
                //.wrap("<div class='dataTables_borderWrap' />")   //if you are applying horizontal scrolling (sScrollX)
                .DataTable({
                    bAutoWidth: false,
                    bServerSide: true,
                    sAjaxSource: "@Url.Action("Search")",
                    bProcessing: false,
                    aoColumns: [
                        { mData: "ProcessName" },
                        { mData: "FeesPurpose" },
                        { mData: "AmountInDollar" },
                         { mData: "AmountIdCedis" }
                    ]
                });
    </script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.9.1/underscore.js"></script>
<script src="https://www.letzchat.com/plugin/firebase.js"></script>
<script type="text/javascript" src="https://www.letzchat.com/ghana/translate.js"></script>



}






