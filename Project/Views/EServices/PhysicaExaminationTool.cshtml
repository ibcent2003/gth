@model Project.Models.EServicesViewModel
@{
    ViewBag.Title = "Physical Examination Tool";
}

<div class="page-header page-title-left mini">
    <div class="image-bg content-in" data-background="@Url.Content("~/Content/Frontend/light/img/gthbg.jpg")" data-stellar-background-ratio="0.5" style="background-image: @Url.Content("~/Content/Frontend/light/img/sections/slider/backmenu.jpg"); background-position: 50% 0%;"></div>
    <div class="container">
        <div class="col-md-12">
            <h1 class="title" style="color:white">Physical Examination Tool</h1>
            <ul class="breadcrumb" style="color:white">
                <li style="color:white">
                    <a href="@Url.Action("Classic", "Home", new {area = "" })" style="color:white">Home</a>
                </li>

                <li class="active" style="color:white">Physical Examination Tool</li>
            </ul>
        </div>
    </div>
</div>

<section class="page-section">
    <div class="container">
        <div class="row">

@if (Model.Examination.Count != 0)
{
    foreach (var item in Model.Examination.OrderByDescending(x => x.Id))
    {
            <div class="col-sm-6 col-md-4">
                <div class="post-item">
                    <h4 class="post-title">
                        @item.Name          </h4>

                    <div class="post-content">@Html.Raw(item.Sample)</div>
                    <div class="post-meta">
                        <!-- Author  -->                                     
                        <!-- Category -->

                        <span class="category pull-right">
                            <i class="glyphicon glyphicon-eye-open"></i> <button type="button"  class="btn btn-link" data-toggle="modal" data-target="#@item.Id">More Details</button>
                        </span>
                    </div>
                    <!-- Modal -->
                    <div class="modal fade" id="@item.Id" role="dialog">
                        <div class="modal-dialog">

                            <!-- Modal content-->
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    <h4 class="modal-title">@item.Name</h4>
                                </div>
                                <div class="modal-body">
                                    <p>@item.Description</p>

                                    @if (item.FileName != null)
                                    {
                                        <span class="author">
                                            <i class="icon-download"></i><a href="@Model.DownloadPath@item.FileName" target="_blank" class="btn btn-link">Download a copy</a>
                                        </span>
                        <!-- Meta Date -->
                                    }
                                    
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>


                

                


            </div>
    }
}
        </div>
       
    </div>
</section>

@section Scripts{

    <script src="https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.9.1/underscore.js"></script>
    <script src="https://www.letzchat.com/plugin/firebase.js"></script>
    <script type="text/javascript" src="https://www.letzchat.com/ghana/translate.js"></script>

}

