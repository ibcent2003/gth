@model Project.Models.EServicesViewModel
@{
    ViewBag.Title = "Freight Rates";
}

<div class="page-header page-title-left mini">
    <div class="image-bg content-in" data-background="@Url.Content("~/Content/Frontend/light/img/gthbg.jpg")" data-stellar-background-ratio="0.5" style="background-image: @Url.Content("~/Content/Frontend/light/img/sections/slider/backmenu.jpg"); background-position: 50% 0%;"></div>
    <div class="container">
        <div class="col-md-12">
            <h1 class="title" style="color:white">Freight Rates</h1>
            <ul class="breadcrumb" style="color:white">
                <li style="color:white">
                    <a href="@Url.Action("Classic", "Home", new {area = "" })" style="color:white">Home</a>
                </li>

                <li class="active" style="color:white">Used Vehicle Freight</li>
            </ul>
        </div>
    </div>
</div>


<section id="addition-info" class="page-section">
    <div class="container">
        <div class="row">

            <div class="col-sm-3 col-md-3">
                <div class="widget">
                    <div class="widget-title">
                        <h3 class="title"><i class="icon-rate-review"></i>List of Freight Rates</h3>
                    </div>

                    <div id="MainMenu2">
                        <div class="list-group panel">

                            <a href="@Url.Action("GeneralGoods", "EServices", new {area = "" })" class="list-group-item">General Goods</a>

                            <a href="@Url.Action("UsedVehicleFreight", "EServices", new {area = "" })" class="list-group-item">Used Vehicle</a>


                        </div>
                    </div>
                </div>

            </div>


            <div class="col-sm-9 col-md-9">
                <div class="widget">
                    <div class="widget-title">
                        <h3 class="title">Used Vehicle</h3>
                    </div>

                    @using (Html.BeginForm("UsedVehicleFreight", "EServices", FormMethod.Post, new { @class = "form-horizontal", Id = "form1" }))
                    {
                        <div>

                            <div class="editor-field">
                                @Html.DropDownListFor(m => m.VehicleCategoryId, new SelectList(Model.VehicleTypeList, "Value", "Text"), new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.VehicleCategoryId)
                            </div>

                            <input type="submit" class="btn btn-default btn-xs pull-right" value="Submit" style="color:white" />
                        </div>
                    }

                </div>
            
            </div>


        </div>


        @if (Model.hasSearch == true)
        {

           
                <div class="row">


                    <div class="col-sm-3 col-md-3">                       

                    </div>
                    <div class="col-sm-9 col-md-9 post-list">
                        <div class="widget">
                            <div class="widget-title">
                                <h3 class="title">Freight Rates Values</h3>
                            </div>
                            <div>

                                <table class="table table-striped table-bordered table-hover table-checkable datatable dataTable">
                                    <thead>
                                        <tr style="font-size: 12px;">
                                            <th>S/N</th>
                                            <th>Category</th>
                                            <th>Freight Value</th>
                                            <th>CC From</th>
                                            <th>To CC</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.FreightValueList.Count != 0)
                                        {
                                            int i = 0;
                                            foreach (var item in Model.FreightValueList)
                                            {
                                                ++i;
                                                <tr style="font-size: 12px;">
                                                    <td>
                                                        @i
                                                    </td>
                                                    <td>@item.Name</td>
                                                    <td>@item.FreightValues</td>
                                                    <td>@item.MinimumCC</td>
                                                    <td>@item.MaximumCC</td>

                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="8">No Records Found!...</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>






                        </div>

                        <div class="widget">
                            <div class="widget-title">
                                <h3 class="title">Overage Vehicle Penalty</h3>
                            </div>

                            <div>
                                <table class="table table-striped table-bordered table-hover table-checkable datatable dataTable">
                                    <thead>
                                        <tr style="font-size: 12px;">
                                            <th>S/N</th>
                                            <th>Category</th>
                                            <th>Overage Value</th>
                                            <th>From</th>
                                            <th>To</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.OverageRatesList.Count != 0)
                                        {
                                            int i = 0;
                                            foreach (var item in Model.OverageRatesList)
                                            {
                                                ++i;
                                                <tr style="font-size: 12px;">
                                                    <td>
                                                        @i
                                                    </td>
                                                    <td>@item.Name</td>
                                                    <td>@item.Overage</td>
                                                    <td>@item.MinimumAge</td>
                                                    <td>@item.MaximumAge</td>

                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="8">No Records Found!...</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>

                            </div>

                        </div>
                    </div>
                    

                </div>
          

        }
    </div>
</section>

@section Scripts{

    <script src="https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.9.1/underscore.js"></script>
    <script src="https://www.letzchat.com/plugin/firebase.js"></script>
    <script type="text/javascript" src="https://www.letzchat.com/ghana/translate.js"></script>

}



