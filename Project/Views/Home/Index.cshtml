<section class="page-section homeSection" style="">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-9 post-list">
                <div class="widget">
                    <div class="widget-title">
                        <h3 class="letzchat_translate">Latest News</h3>
                    </div>

                   
                    @if (Model.NewsList.Count != 0)
                    {
                        foreach (var item in Model.NewsList.OrderByDescending(x => x.Id).Take(3))
                        {

                            <div class="post-item">
                                <div class="post-image pull-left">
                                    <a href="@Url.Action("ViewNews", "Home", new {Id=item.Id, area = "" })">
                                        <img src="@Url.Content(Model.PicturePath+item.Photo)" width="320" height="282" alt="" title="" />
                                    </a>
                                </div>
                                <h4 class="post-title"><a href="@Url.Action("ViewNews", "Home", new {Id=item.Id, area = "" })">@item.NewsHeadline.ToLower()<br /></a> </h4>
                                <div class="post-content">@Html.Raw(item.NewsContent.Substring(0, 400))<a href="@Url.Action("ViewNews", "Home", new {Id=item.Id, area = "" })">..read more</a></div>

                                <div class="post-meta">

                                    <!-- Meta Date -->

                                    <span class="time">
                                        <i class="fa fa-calendar"></i>Posted Date @item.CreatedDate.ToShortDateString()
                                    </span>
                                    <!-- Category -->
                                    @*<a href="https://twitter.com/share?ref_src=twsrc%5Etfw" class="twitter-share-button" data-show-count="false">Share on Twitter</a>*@
                                    <span class="category pull-right">
                                        <i class="glyphicon glyphicon-eye-open"></i> @item.NoOfView

                                        <a href="@Url.Action("Index", "RecentNews", new {area = "" })" class="btn btn-link btn-xs">View more News</a>

                                    </span>

                                    <br /><br />

                                </div>
                            </div>

                        }





                    }




                </div>
            </div>
            <div class="sidebar col-sm-12 col-md-3">
                <div class="widget">
                    <div class="widget-title">
                        <h3 class="title">Tweets</h3>
                    </div>

                    <div>
                        <a class="twitter-timeline" data-width="270" data-height="200" data-theme="dark" href="https://twitter.com/Ghanatradehub?ref_src=twsrc%5Etfw"></a>

                    </div>

                </div>
                
            </div>
            <div class="sidebar col-sm-12 col-md-3">
                <div class="widget">
                    <div class="widget-title">
                        <h3 class="title">Popular News</h3>
                    </div>

                    <div>
                        @if (Model.NewsList.Count != 0)
                        {
                            foreach (var item in Model.NewsList.OrderByDescending(x => x.NoOfView).Take(2))
                            {
                                <ul class="latest-posts">
                                    <li>
                                        <div class="post-thumb">
                                            <a href="@Url.Action("ViewNews", "Home", new {Id=item.Id, area = "" })">
                                                <img class="img-rounded" src="@Url.Content(Model.PicturePath+item.Photo)" alt="" title="" width="84" height="84">
                                            </a>
                                        </div>
                                        <div class="post-details">
                                            <div class="description">

                                                @Html.Raw(item.NewsHeadline.Substring(0, 20).ToLower()) <a href="@Url.Action("ViewNews", "Home", new {Id=item.Id, area = "" })">..read more</a>
                                            </div>
                                            <div class="meta">
                                                <span class="time">
                                                    <i class="fa fa-calendar"></i> @item.CreatedDate.ToShortDateString()
                                                </span>

                                                <span class="category pull-right">
                                                    <i class="glyphicon glyphicon-eye-open"></i> @item.NoOfView
                                                </span>
                                            </div>

                                        </div>
                                    </li>
                                </ul>

                            }
                        }


                    </div>

                </div>
            </div>

           

            <div class="sidebar col-sm-12 col-md-3">
                <div class="widget">
                    <div class="widget-title">
                        <h3 class="title">Import/Export Procedures</h3>
                    </div>

                    <div id="MainMenu2">
