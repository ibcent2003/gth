@model Project.Models.StakeholderRegistrationModel
@{
    ViewBag.Title = "Forgot Password";
    //Layout = "~/Views/Shared/_AuthenticationLayout.cshtml";
}

<script src="@Url.Content("~/Content/SecurityGuard/scripts/jquery-1.6.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/SecurityGuard/scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/SecurityGuard/scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/SecurityGuard/scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div class="page-header page-title-left mini">
    <div class="image-bg content-in" data-background="@Url.Content("~/Content/Frontend/light/img/gthbg.jpg")" data-stellar-background-ratio="0.5" style="background-image: @Url.Content("~/Content/Frontend/light/img/sections/slider/backmenu.jpg"); background-position: 50% 0%;"></div>
    <div class="container">
        <div class="col-md-12">
            <h1 class="title" style="color:white">Forgot Password</h1>
            <ul class="breadcrumb" style="color:white">
                <li style="color:white">
                    <a href="@Url.Action("Index", "Home", new {area = "" })" style="color:white">Home</a>
                </li>

                <li class="active" style="color:white">Forgot Password</li>
            </ul>
        </div>
    </div>
</div>

<!-- page-header -->
<section class="page-section animated fadeInUp visible" data-animation="fadeInUp">
    <div class="container">
        <div class="row">
            <div class="col-md-12">Did you forgot your password? Please provide us with your company email address and a new password would you be sent your email.</div>
        </div>
        <hr />
        <div class="row">
            @if (TempData["Message"] != null)
            {
                var alertType = (TempData["MessageType"] != null) ? TempData["MessageType"] : "alert-info";
                <div class="alert @alertType fade in">
                    <button type="button" class="close" data-dismiss="alert">
                        <i class="fa fa-times"></i>
                    </button>
                    @Html.Raw(TempData["Message"])
                </div>
            }
            
            <!-- .content -->
            <div class="col-sm-12 col-md-4">  
              
                    @using (Html.BeginForm("ForgotPassword", "SGAccount", FormMethod.Post))
                    {
                    <h3 class="title">Forgot Password</h3>
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div id="success"></div>


                    @Html.TextBoxFor(model => model.forgotPasswordform.EmailAddress, new { @class = "form-control", @placeholder = "Email Address *" })
                    @Html.ValidationMessageFor(model => model.forgotPasswordform.EmailAddress, null, new { @style = "color:red" })

                    <div class="clearfix"></div>
                    <button id="submit" type="submit" class="btn btn-success">Submit</button>                        
                }


            </div>

            <div class="content col-sm-12 col-md-8" style="text-align:right">
                <img src="~/Content/Frontend/light/img/loginicon.jpg" />
            </div>

        </div>
    </div>
</section>


