@model Project.Areas.Setup.Models.EventViewModel
@{
    ViewBag.Title = "Edit Event Entry";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.IsGreetings = "true";
}

@section Crumbs{
    <div class="crumbs">

        <ul class="breadcrumb" id="breadcrumbs">
            <li><i class="icon-home"></i><a href="@Url.Action("Index", "Home", new { area = "Admin" })">Dashboard</a> </li>
            <li><i class="current"></i><a href="javascript: return void(0)">Edit New Event</a> </li>


        </ul>
    </div>
}

<div class="row">
    <div class="col-md-12">
        <div class="widget box">
            <div class="widget-header">
                <h4>
                    <i class="icon-reorder"></i>
                   Edit Event Entry
                </h4>
            </div>
            <div class="widget-content">
                @using (Html.BeginForm("Edit", "EventManagement", FormMethod.Post, new { @enctype = "multipart/form-data", @class = "form-horizontal row-border" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(x=>x.eventform.Id)
                    <div class="form-group">
                        @Html.Label("Event Name", new { @class = "col-md-2 control-label" })
                        <div class="col-md-6">
                            @Html.TextBoxFor(m => m.eventform.Name, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.eventform.Name)
                        </div>
                    </div>



                    <div class="form-group">
                        @Html.LabelFor(m => m.eventform.Venue, new { @class = "col-md-2 control-label" })
                        <div class="col-md-6">
                            @Html.TextAreaFor(m => m.eventform.Venue, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.eventform.Venue)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Event Date", new { @class = "col-md-2 control-label" })
                        <div class="col-md-6">
                            @Html.TextBoxFor(m => m.eventform.EventDate, new { @class = "datepicker form-control", @readonly = true })
                            @Html.ValidationMessageFor(model => model.eventform.EventDate)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Label("Event Time", new { @class = "col-md-2 control-label" })
                        <div class="col-md-6">
                            @Html.TextBoxFor(m => m.eventform.EventTime, new { @class = "form-control", @placeholder = "Eg 10:00AM - 12:00PM" })

                            @Html.ValidationMessageFor(model => model.eventform.EventTime)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Has Ended?", new { @class = "col-md-2 control-label" })
                        <div class="col-md-6">
                            @Html.CheckBoxFor(m => m.eventform.HasEnded)
                        </div>
                    </div>

                    <div class="form-actions">
                        @Html.ActionLink("<< Back to List", "Index", null, new { @class = "btn btn-success" })
                        <input type="submit" class="btn btn-warning pull-right" value="Save" />
                    </div>
                }
            </div>
        </div>
    </div>
</div>






@section Scripts{
    @Scripts.Render("~/Content/Backend/plugins/jquery-ui/jquery-ui-1.10.2.custom.min.js")

    <script>
        "use strict";


        "use strict";
        $(document).ready(function () {
            $(".datepicker").datepicker({
                defaultDate: +7,
                showOtherMonths: true,
                autoSize: true,
                dateFormat: "yy-mm-dd",
                //maxDate: '+0D',
                changeYear: true,
                changeMonth: true

            });
        });

    </script>


}













