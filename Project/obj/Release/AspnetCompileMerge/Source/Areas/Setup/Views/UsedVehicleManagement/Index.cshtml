@model Project.Areas.Setup.Models.UsedVehicleManagementViewModel

@{
    ViewBag.Title = "Used Vehicle Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.IsGreetings = "true";}

@section Crumbs{
    <div class="crumbs">

        <ul class="breadcrumb" id="breadcrumbs">
            <li> <i class="icon-home"></i> <a href="@Url.Action("Index", "Home", new { area="Admin"})">Dashboard</a> </li>
            <li class="current"> <a title="" href="javascript: return void(0)">Used Vehicle Management</a> </li>
        </ul>
    </div>
}

<div class="row">
    <div class="col-md-12">
        <div class="widget-header">
            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
        </div>
        <div class="widget-content">



            <table class="table table-striped table-bordered table-hover table-checkable datatable dataTable">
                <thead>
                    <tr style="font-size: 12px;">
                        <th>S/N</th>
                        <th>Make</th>
                        <th>Model</th>                        
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Rows.Count != 0)
                    {
                        int i = 0;
                        foreach (var item in Model.Rows)
                        {
                            ++i;
                            <tr style="font-size: 12px;">
                                <td>
                                    @i
                                </td>
                                <td>@Html.ActionLink(item.VehicleReference.Name, "Edit", new { Id = item.Id }, null)</td>
                                <td>@item.ModelName</td>     
                                <td></td>                                                        
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8">No Records Found!...</td>
                        </tr>
                    }
                </tbody>
            </table>



        </div>
    </div>
</div>

@section Scripts{
    @Scripts.Render("~/Content/Backend/plugins/datatables/jquery.dataTables.min.js")
    @Scripts.Render("~/Content/Backend/plugins/datatables/tabletools/TableTools.min.js")
    @Scripts.Render("~/Content/Backend/plugins/datatables/colvis/ColVis.min.js")
    @Scripts.Render("~/Content/Backend/plugins/datatables/DT_bootstrap.js")
    <script>
    "use strict";

    </script>
}

