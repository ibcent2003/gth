@model Project.Models.IndexViewModel
@{
    ViewBag.Title ="Blogged:"+ Model.news.NewsHeadline;
}

<div class="page-header page-title-left mini">
    <div class="image-bg content-in" data-background="@Url.Content("~/Content/Frontend/light/img/gthbg.jpg")" data-stellar-background-ratio="0.5" style="background-image: @Url.Content("~/Content/Frontend/light/img/sections/slider/backmenu.jpg"); background-position: 50% 0%;"></div>
    <div class="container">
        <div class="col-md-12">
            <h1 class="title" style="color:white">News Details</h1>
            <ul class="breadcrumb" style="color:white">
                <li style="color:white">
                    <a href="@Url.Action("Classic", "Home", new {area = "" })" style="color:white">Home</a>
                </li>

                <li class="active" style="color:white">News Details</li>
            </ul>
        </div>
    </div>
</div>


<section class="page-section">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-9 post-list">
                <div class="widget">
                    <div class="widget-title">
                        <h3 class="title">News Details</h3>
                    </div>


                            <div class="post-item">
                                <div class="post-image pull-left">
                                    <img src="@Url.Content(Model.PicturePath+Model.news.Photo)" width="320" height="282" alt="" title="" />
                                </div>

                             
                                    <h4 class="post-title">@Model.news.NewsHeadline </h4>

                               
                                <div class="post-content">@Html.Raw(Model.news.NewsContent)</div>
                                <div class="post-meta">
                                    <!-- Author  -->
                                    @*<span class="author">
                                        <i class="fa fa-user"></i> Posted by @Model.news.CreatedBy
                                    </span>*@
                                    <!-- Meta Date -->

                                    <span class="time">
                                        <i class="fa fa-calendar"></i>Posted Date: @Model.news.CreatedDate.ToShortDateString()
                                    </span>
                                    <!-- Category -->

                                    <span class="category pull-right">
                                        <i class="glyphicon glyphicon-eye-open"></i> @Model.news.NoOfView 

                                    </span>

                                    <span>
                                        <a href="https://twitter.com/share?ref_src=twsrc%5Etfw" class="twitter-share-button" data-show-count="false">Tweet</a>
                                       </span> 
</div>
                              

                                
                               </div>
                  


                </div>
            </div>
            <div class="sidebar col-sm-12 col-md-3">
                <div class="widget">
                    <div class="widget-title">
                        <h3 class="title">Recent News</h3>
                    </div>
                   
                    <div>
                       @if (Model.NewsList.Count != 0)
                       {
                           foreach (var item in Model.NewsList.Take(4))
                           {
                            <ul class="latest-posts">
                                <li>
                                    <div class="post-thumb">
                                        <a href="@Url.Action("ViewNews", "Home", new {Id=item.Id, area = "" })">
                                            <img class="img-rounded" src="@Url.Content(Model.PicturePath+item.Photo)" alt="" title="" width="84" height="84">
                                            </a>
</div>
                                    <div class="post-details">
                                        <div class="description">
                                                                                                                                         
                                                @Html.Raw(item.NewsHeadline.Substring(0, 35)) <a href="@Url.Action("ViewNews", "Home", new {Id=item.Id, area = "" })">..read more</a>
</div>
                                        <div class="meta">                                           
                                            <span class="time">
                                                <i class="fa fa-calendar"></i> @item.CreatedDate.ToShortDateString()
                                            </span>
                                            <span class="category pull-right">
                                                <i class="glyphicon glyphicon-eye-open"></i> @item.NoOfView

                                            </span>
                                        </div>
                                    </div>
                                </li>
                                
                            </ul>
                            <hr />
                           }
                       }
                       
                    </div>
                 
                </div>
            </div>

            <div class="sidebar col-sm-12 col-md-3">
                <div class="widget">
                    <div class="widget-title">
                        <h3 class="title">News Archive</h3>
                    </div>

                    <div>
                        @if (Model.newslist.Count != 0)
                        {
                            foreach (var item in Model.newslist)
                            {
                                <div id="MainMenu2">
                                    <div class="list-group panel">
                                  
                                        <a href="#demo2" class="list-group-item">@Convert.ToDateTime(item).ToString("Y")</a>  
                                                                        
                                    </div>
                                </div>
                            }
                        }



                    </div>

                </div>
            </div>

            <div class="sidebar col-sm-12 col-md-3">
                <div class="widget">
                    <div class="widget-title">
                        <h3 class="title">News Categories</h3>
                    </div>

                    <div>
                        @if (Model.newsCategory.Count != 0)
                        {
                            foreach (var item in Model.newsCategory)
                            {
                                <div id="MainMenu2">
                                    <div class="list-group panel">

                                        <a href="#demo2" class="list-group-item">@item</a>

                                    </div>
                                </div>
                            }
                        }



                    </div>

                </div>
            </div>
          
         
        </div>
    </div>
</section>
<script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>