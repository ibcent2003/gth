@model Project.Areas.Setup.Models.ProductTypeViewModel

@{
    ViewBag.Title = "Product Management for " + Model.ProductType.Name;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.IsGreetings = "true";}

@section Crumbs{
    <div class="crumbs">

        <ul class="breadcrumb" id="breadcrumbs">
            <li> <i class="icon-home"></i> <a href="@Url.Action("Index", "Home", new { area="Admin"})">Dashboard</a> </li>
            <li class="current"> <a title="" href="javascript: return void(0)">Product Management</a> </li>
        </ul>
    </div>
}

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr style="font-size: 12px;">
            <th>S/N</th>
            <th>Name</th>
            <th>Photo</th>
            <th>No Of views</th>
            <th>Modified By</th>
            <th>Modified Date</th>          
        </tr>
    </thead>
    <tbody>
        @if (Model.ProductType != null)
        {
           
                <tr style="font-size: 12px;">
                    <td>
                       
                    </td>
                    <td>@Model.ProductType.Name</td>
                    <td><img src="@Model.PicturePath@Model.ProductType.Photo" height="50" width="50" /></td>
                    <td>@Model.ProductType.NoOfView</td>
                    <td>@Model.ProductType.ModifiedBy</td>
                    <td>@Model.ProductType.ModifiedDate</td>
                   

                </tr>
            
        }
        else
        {
            <tr>
                <td colspan="8">No Records Found!...</td>
            </tr>
        }
    </tbody>
</table>
<br />










<div class="row">
    <div class="col-md-12">
        <div class="widget-header">            
            <a href="@Url.Action("NewProduct", "ProductTypeManagement", new { Id = Model.ProductType.Id,  @area="Setup" })" class="btn btn-success">Create New</a>
        </div>
        <br />
        <div class="widget-content">



            <table class="table table-striped table-bordered table-hover table-checkable datatable dataTable">
                <thead>
                    <tr style="font-size: 12px;">
                        <th>S/N</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Modified By</th>
                        <th>Modified Date</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.products.Count != 0)
                    {
                        int i = 0;
                        foreach (var item in Model.products)
                        {
                            ++i;
                            <tr style="font-size: 12px;">
                                <td>
                                    @i
                                </td>
                                <td>@Html.ActionLink(item.Name, "EditProduct", new { Id = item.Id, ProductTypeId=item.ProductTypeId }, null)</td>
                                <td>@item.Description</td>                               
                                <td>@item.ModifiedBy</td>
                                <td>@item.ModifiedDate</td>


                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8">No Records Found!...</td>
                        </tr>
                    }
                </tbody>
            </table>



        </div>
    </div>
</div>

@section Scripts{
    @Scripts.Render("~/Content/Backend/plugins/datatables/jquery.dataTables.min.js")
    @Scripts.Render("~/Content/Backend/plugins/datatables/tabletools/TableTools.min.js")
    @Scripts.Render("~/Content/Backend/plugins/datatables/colvis/ColVis.min.js")
    @Scripts.Render("~/Content/Backend/plugins/datatables/DT_bootstrap.js")
    <script>
    "use strict";

    </script>
}

