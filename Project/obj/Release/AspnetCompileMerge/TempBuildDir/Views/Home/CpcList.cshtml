@model Project.Models.IndexViewModel
@{
    ViewBag.Title = "Customs Procedure Code";
}

<div class="page-header page-title-left mini">
    <div class="image-bg content-in" data-background="@Url.Content("~/Content/Frontend/light/img/gthbg.jpg")" data-stellar-background-ratio="0.5" style="background-image: @Url.Content("~/Content/Frontend/light/img/sections/slider/backmenu.jpg"); background-position: 50% 0%;"></div>
    <div class="container">
        <div class="col-md-12">
            <h1 class="title" style="color:white">Customs Procedure Code</h1>
            <ul class="breadcrumb" style="color:white">
                <li style="color:white">
                    <a href="@Url.Action("Classic", "Home", new {area = "" })" style="color:white">Home</a>
                </li>

                <li class="active" style="color:white">Customs Procedure Code</li>
            </ul>
        </div>
    </div>
</div>

<section class="page-section">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-6 post-list">
                <div class="widget">
                    <div class="widget-title">
                        <h3 class="title">Customs Procedure Code</h3>
                    </div>
                    <div>

                        <table class="table table-striped table-bordered table-hover table-checkable datatable dataTable">
                            <thead>
                                <tr style="font-size: 12px;">
                                    <th>S/N</th>
                                    <th>Description</th>
                                    <th>Code</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.CPCList.Count != 0)
                                {
                                    int i = 0;
                                    foreach (var item in Model.CPCList.Where(x => x.Type == "Customs Procedure Codes(CPC)"))
                                    {
                                        ++i;
                                        <tr style="font-size: 12px;">
                                            <td>
                                                @i
                                            </td>
                                            <td>@item.Description</td>
                                            <td>@item.Code</td>

                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="8">No Records Found!...</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>


              



                </div>
            </div>
            <div class="sidebar col-sm-12 col-md-6">
                <div class="widget">
                    <div class="widget-title">
                        <h3 class="title">Customs Regimes Code</h3>
                    </div>

                    <div>
                        <table class="table table-striped table-bordered table-hover table-checkable datatable dataTable" id="regimes">
                            <thead>
                                <tr style="font-size: 12px;">
                                    <th>S/N</th>
                                    <th>Description</th>
                                    <th>Code</th>                                   
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.CPCList.Count != 0)
                                {
                                    int i = 0;
                                    foreach (var item in Model.CPCList.Where(x=>x.Type== "Customs Regimes"))
                                    {
                                        ++i;
                                        <tr style="font-size: 12px;">
                                            <td>
                                                @i
                                            </td>
                                            <td>@item.Description</td>
                                            <td>@item.Code</td>
                                            
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="8">No Records Found!...</td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>

                </div>
            </div>

        </div>
    </div>
</section>


@section Styles {
    @Styles.Render("~/Content/Backend/datatables/DataTables-1.10.16/css/jquery.dataTables.css")
    @Styles.Render("~/Content/Backend/datatables/DataTables-1.10.16/css/dataTables.bootstrap.css")
}


@section Scripts{
@Scripts.Render("~/Content/Backend/datatables/DataTables-1.10.16/js/jquery.dataTables.js")
@Scripts.Render("~/Content/Backend/datatables/DataTables-1.10.16/js/dataTables.bootstrap.js")


<script>
        var oTable1 =
            $('#regimes')
                //.wrap("<div class='dataTables_borderWrap' />")   //if you are applying horizontal scrolling (sScrollX)
                .DataTable({
                    bAutoWidth: false,
                    bServerSide: true,
                    sAjaxSource: "@Url.Action("Search")",
                    bProcessing: false,
                    aoColumns: [
                        { mData: "Drescription" },
                        { mData: "Code" }
                    ]
                });
</script>
}






