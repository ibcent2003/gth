@model Project.Areas.Setup.Models.ProceedureViewModel
@{
    ViewBag.Title = "Import/Export Proceedure Entry";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.IsGreetings = "true";
}
@section Scripts{
    @Scripts.Render("~/Content/Backend/vendors/tinymce/tinymce.min.js")
    <script>


        "use strict";
        $(document).ready(function () {
            $(".datepicker").datepicker({
                defaultDate: +7,
                showOtherMonths: true,
                autoSize: true,
                appendText: '<span class="help-block">(yyyy-mm-dd)</span>',
                dateFormat: "yy-mm-dd"
            });
        });
    </script>
}
@section Crumbs{
    <div class="crumbs">

        <ul class="breadcrumb" id="breadcrumbs">
            <li><i class="icon-home"></i><a href="@Url.Action("Index", "Home", new { area = "Admin" })">Dashboard</a> </li>
            <li><i class="current"></i><a href="javascript: return void(0)">Import/Export Proceedure Entry</a> </li>


        </ul>
    </div>
}

<div class="row">
    <div class="col-md-12">
        <div class="widget box">
            <div class="widget-header">
                <h4>
                    <i class="icon-reorder"></i>
                    Import/Export Proceedure Entry
                </h4>
            </div>
            <div class="widget-content">
                @using (Html.BeginForm("Create", "ProceeduresManagement", FormMethod.Post, new { @enctype = "multipart/form-data", @class = "form-horizontal row-border" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        @Html.Label("Proceedure Type", new { @class = "col-md-2 control-label" })
                        <div class="col-md-6">
                            @Html.DropDownListFor(m => m.proceeduresForm.ProcedureTypeId, new SelectList(Model.ProcedureTypeList, "Value", "Text"), new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.proceeduresForm.ProcedureTypeId)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Name", new { @class = "col-md-2 control-label" })
                        <div class="col-md-6">
                            @Html.TextBoxFor(m => m.proceeduresForm.Name, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.proceeduresForm.Name)
                        </div>
                    </div>


                   

                    <div class="form-group">
                        @Html.Label("Description", new { @class = "col-md-2 control-label" })
                        <div class="col-md-6">
                            @Html.TextAreaFor(m => m.proceeduresForm.Description, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.proceeduresForm.Description)
                        </div>
                    </div>



                    <div class="form-actions">

                        <a href="@Url.Action("Index", new { @area="Setup" })" class="btn btn-success"><< Back to List</a>
                        <input type="submit" class="btn btn-warning pull-right" value="Save" />
                    </div>
                }
            </div>
        </div>
    </div>
</div>




















