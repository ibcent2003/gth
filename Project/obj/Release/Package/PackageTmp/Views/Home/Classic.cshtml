@section Scripts{
    <script src="~/Scripts/jquery-1.12.4.min.js"></script>
<script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
    <script>
        var movingItems;
        window.onload = function () {
            $('.owl-wrapper-outer:nth-child(1)>.owl-wrapper').attr('id', 'mainScroller');
        };

        (function () {
            Init();
        })();
        var calculate = function () {
            var rate = Number($("#CurrencyConverterForm_Country").val().trim());
            var amount = Number($("#CurrencyConverterForm_Amount").val().trim());
            var total = amount * rate;

            if (isNaN(amount)) {
                alert("Fill amount input with digits");
            }

            $("#totalAmount").html(total.toFixed(2));
        }


        var CurrencyChange = function () {
            calculate();
            $("#rate").html($("#CurrencyConverterForm_Country").val());
        }



        function Init() {
            var counter = 0;

            movingItems = setInterval(function () {
                if (counter % 2 == 0) {
                    $('#mainScroller').removeClass('rightMove').addClass('leftMove');
                } else {
                    $('#mainScroller').removeClass('leftMove').addClass('rightMove');
                }
                counter++;
            }, 6000);
        }

        $(document).on('mouseover', '#mainScroller>.owl-item', function () {
            clearInterval(movingItems);
        });
        $(document).on('mouseout', '#mainScroller>.owl-item', function () {
            Init();
        });

    </script>




}
